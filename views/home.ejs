<link rel="stylesheet" href="/css/home.css">
 <div id="home-container">
<section id="user-feed">
<%if(locals.user){%>
    <section>
        <form action="/post/create" method="POST" id="post-form">
            <textarea name="content" id="content" cols="30" rows="3" placeholder="Enter Text..." required></textarea>
            <input type="submit" value="Post">
        </form>
    </section>

<%}%>

    <section id="post-list-container">
        <h1>Posts</h1>
        <ul id="post-list">
       
        
            
            <%for(i of posts){%>
                
               <%-include('_post')-%>
        <%}%>
        
       
        </ul>
    </section>

</section>


    <section id="friends-list">
        <ul>
            <h1>Friends</h1>
            <%for(u of all_users){%>
              <li>  <a href="/user/profile/<%=u.id%>"><%=u.name%></a></li>
                <%}%>
        </ul>
    </section>



    </div>
    <script src="/js/home_posts.js"></script>